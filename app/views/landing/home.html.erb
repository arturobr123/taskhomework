    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <h5 class="header col s12 light white-text">Olvidate de las tareas que no te gustan</h5>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="<%= asset_path('trabajo7.png') %>" alt="Unsplashed background img 3"></div>
