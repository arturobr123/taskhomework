<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12 full-width"}) do |f| %>
  <%= devise_error_messages! %>


  <div class='row'>
    <div class="input-field col s12 l12">
      <%= f.text_field :name, class:"", id:"name" %>
      <%= f.label "Nombre", class:"", for:"name" %>
    </div>
  </div>

  

  <div class='row'>
    <div class="input-field col s12 l6">
      <%= f.text_field :firs_last_name, class:"", id:"firs_last_name" %>
      <%= f.label "Apellido paterno", class:"", for:"firs_last_name" %>
    </div>

    <div class="input-field col s12 l6">
      <%= f.text_field :second_last_name, class:"", id:"second_last_name" %>
      <%= f.label "Apellido materno", class:"", for:"second_last_name" %>
    </div>

  </div>


  <div class="row">
     <div class='input-field col s12'>
      <%= f.email_field :email, class:"", id:"email"  %>
      <%= f.label "Correo", class:"",for:"email" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, class:"", id:"password" %>
    <%= f.label "Contraseña", class:"", for:"password" %>
    </div>
  </div>


  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, class:"", id:"r_password" %>
    <%= f.label "Confirmar contraseña", class:"", for:"r_password" %>
    </div>
  </div>


  <br />

  <center>
    <div class='row'>
      <%= f.submit "Sign up", class:'col s12 btn btn-large indigo' %>
    </div>
  </center>

<% end %>

<%= render "users/shared/links" %>

<%= link_to "AdminRegister", new_admin_registration_path ,class:"underline"  %>







