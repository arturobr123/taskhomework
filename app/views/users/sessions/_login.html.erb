<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col s12 "}) do |f| %>
  
  <div class='row'>
    <div class='col s12'>
    </div>
  </div>


  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, class:"" %>
      <%= f.label :email, class:"" %>
      
    </div>
  </div>


  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, class:"" %>
      <%= f.label :password,class:"" %>
    </div>
  </div>

  <div class="row">
    <% if devise_mapping.rememberable? -%>
      <div class="field ">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div>


  <center>
    <div class='row'>
      <%= f.submit "Log in", class:'col s12 btn btn-large indigo' %>
    </div>
  </center>

<% end %>

<%= render "users/shared/links" %>

