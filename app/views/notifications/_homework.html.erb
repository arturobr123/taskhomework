<!-- Parcial de notificacion de que ya se termino la tarea  -->

<li class="collection-item avatar">

      <i class="material-icons circle green">check</i>

      <span class="title"><%= link_to "El trabajador ha finalizado tu tarea: #{notification.item.name}, ahora puedes calificar el rendimiento." , notification.item.classrooms.first , class:"black-text"  %></span>

      <p>Fecha: <%= fechaBonita notification.created_at %> </p> 

      <%= link_to notification_path(id: notification.id,notification:{viewed: true}),method: :put, class:"secondary-content" do %>
            <i class="material-icons">check</i>

      <% end %>


</li>